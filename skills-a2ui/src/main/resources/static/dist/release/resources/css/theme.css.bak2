:root {
    /* 基础颜色 */
    --dark-bg: #1e1e1e;
    --dark-bg-lighter: #2d2d2d;
    --dark-bg-hover: #3d3d3d;
    --dark-bg-input: #252525;
    --dark-bg-card: #2d2d30;
    --dark-text: #cccccc;
    --dark-text-light: #999999;
    --dark-text-inverse: #ffffff;
    --dark-border: #3c3c3c;
    --dark-primary: #007acc;
    --dark-primary-dark: #005691;
    --dark-primary-hover: #0062a3;
    --dark-primary-active: #005691;
    --dark-secondary: #6c757d;
    --dark-secondary-hover: #5a6268;
    --dark-secondary-active: #545b62;
    --dark-text-on-primary: #ffffff;
    --dark-text-on-secondary: #ffffff;
    --dark-error: #e74c3c;
    --dark-shadow-lg: 0 8px 32px rgba(0,0,0,0.6);
    --dark-border-radius-lg: 8px;
    --dark-icon-color: #cccccc;
    --dark-icon-hover: #ffffff;
    --dark-icon-active: #ffffff;
    --dark-icon-colors: #E6945C, #46C37B, #195ead, #9E8CE0, #1f8d9b, #87CEEB, #e04d7f;
    --dark-font-colors: #E6945C, #46C37B, #195ead, #9E8CE0, #1f8d9b, #87CEEB, #e04d7f;
    --dark-item-colors: #F19B60, #49CD81, #0277bd, #A693EB, #42a3af, #B0E0E6, #F06292;

    /* 高对比度颜色 */
    --hc-bg: #000000;
    --hc-text: #ffffff;
    --hc-border: #ffffff;
    --hc-primary: #ffff00;
    --hc-primary-dark: #ffff00;
    --hc-primary-hover: #ffff00;
    --hc-primary-active: #ffff00;
    --hc-secondary: #ffffff;
    --hc-text-on-primary: #000000;
    --hc-text-on-secondary: #000000;
    --hc-border-radius-lg: 0;
    --hc-icon-color: #ffff00;
    --hc-icon-hover: #ffff00;
    --hc-icon-active: #000000;
    --hc-icon-colors: #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00;
    --hc-font-colors: #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00;
    --hc-item-colors: #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00, #ffff00;
    
    /* 浅色主题颜色 */
    --light-bg: #ffffff;
    --light-bg-lighter: #f8f9fa;
    --light-bg-hover: #e9ecef;
    --light-bg-input: #f8f9fa;
    --light-text: #2c3e50;
    --light-text-light: #6c757d;
    --light-text-inverse: #ffffff;
    --light-border: #dee2e6;
    --light-primary: #007bff;
    --light-primary-dark: #0056b3;
    --light-primary-hover: #0069d9;
    --light-primary-active: #0062cc;
    --light-secondary: #6c757d;
    --light-secondary-hover: #5a6268;
    --light-secondary-active: #545b62;
    --light-text-on-primary: #ffffff;
    --light-text-on-secondary: #ffffff;
    --light-error: #e74c3c;
    --light-border-radius-lg: 8px;
    --light-icon-color: #6c757d;
    --light-icon-hover: #495057;
    --light-icon-active: #ffffff;
    --light-icon-colors: #E6945C, #46C37B, #195ead, #9E8CE0, #1f8d9b, #87CEEB, #e04d7f;
    --light-font-colors: #E6945C, #46C37B, #195ead, #9E8CE0, #1f8d9b, #87CEEB, #e04d7f;
    --light-item-colors: #F19B60, #49CD81, #0277bd, #A693EB, #42a3af, #B0E0E6, #F06292;
}

/* 暗黑主题 */
[data-theme="dark"] {
    --bg: var(--dark-bg);
    --bg-lighter: var(--dark-bg-lighter);
    --bg-hover: var(--dark-bg-hover);
    --bg-input: var(--dark-bg-input);
    --bg-card: var(--dark-bg-card);
    --text: var(--dark-text);
    --text-light: var(--dark-text-light);
    --text-inverse: var(--dark-text-inverse);
    --border: var(--dark-border);
    --primary: var(--dark-primary);
    --primary-dark: var(--dark-primary-dark);
    --error: var(--dark-error);
    --shadow-lg: var(--dark-shadow-lg);
    --icon-color: var(--dark-icon-color);
    --icon-hover: var(--dark-icon-hover);
    --icon-active: var(--dark-icon-active);
    --icon-colors: var(--dark-icon-colors);
    --font-colors: var(--dark-font-colors);
    --item-colors: var(--dark-item-colors);
}

/* 高对比度主题 */
[data-theme="hc"] {
    --bg: var(--hc-bg);
    --text: var(--hc-text);
    --border: var(--hc-border);
    --primary: var(--hc-primary);
    --primary-dark: var(--hc-primary-dark);
    --icon-color: var(--hc-icon-color);
    --icon-hover: var(--hc-icon-hover);
    --icon-active: var(--hc-icon-active);
    --icon-colors: var(--hc-icon-colors);
    --font-colors: var(--hc-font-colors);
    --item-colors: var(--hc-item-colors);
}

/* 浅色主题 */
[data-theme="light"] {
    --bg: var(--light-bg);
    --bg-lighter: var(--light-bg-lighter);
    --bg-hover: var(--light-bg-hover);
    --bg-input: var(--light-bg-input);
    --text: var(--light-text);
    --text-light: var(--light-text-light);
    --text-inverse: var(--light-text-inverse);
    --border: var(--light-border);
    --primary: var(--light-primary);
    --primary-dark: var(--light-primary-dark);
    --error: var(--light-error);
    --icon-color: var(--light-icon-color);
    --icon-hover: var(--light-icon-hover);
    --icon-active: var(--light-icon-active);
    --icon-colors: var(--light-icon-colors);
    --font-colors: var(--light-font-colors);
    --item-colors: var(--light-item-colors);
}