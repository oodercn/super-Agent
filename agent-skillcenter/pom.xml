<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.ooderCN</groupId>
        <artifactId>super-agent-parent</artifactId>
        <version>0.6.6</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>agent-skillcenter</artifactId>
    <name>Agent Skill Center</name>
    <description>Skill Center for Ooder Super Agent</description>

    <dependencies>
        <dependency>
            <groupId>com.github.ooderCN</groupId>
            <artifactId>agent-sdk</artifactId>
        </dependency>
        
        <!-- 本地ooder lib依赖 -->
        <dependency>
            <groupId>com.github.ooderCN</groupId>
            <artifactId>ooder-core</artifactId>
            <version>${ooder-core.version}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../agent-sdk/lib/ooder-core-${ooder-core.version}.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.github.ooderCN</groupId>
            <artifactId>ooder-common-client</artifactId>
            <version>${ooder-core.version}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../agent-sdk/lib/ooder-common-client-${ooder-core.version}.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.github.ooderCN</groupId>
            <artifactId>ooder-server</artifactId>
            <version>${ooder-core.version}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../agent-sdk/lib/ooder-server-${ooder-core.version}.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.github.ooderCN</groupId>
            <artifactId>ooder-vfs-web</artifactId>
            <version>${ooder-core.version}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../agent-sdk/lib/ooder-vfs-web-${ooder-core.version}.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        
        <!-- JUnit依赖 -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>com.github.ooderCN.skillcenter.SkillCenterApplication</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>